<%
layout(_view.get(_layout));
block('tab', 'Permission');

const relationTemplate = _view.get('_part/attr/relation');
%>

<%- include(_view.get('_part/attr/radioList'), {
    attr: 'type',
    items: types
}) %>

<%- include(_view.get('_part/attr/checkList'), {
    attr: 'actions',
    items: actions,
    allValue: true,
    translate: 'rbac'
}) %>

<%- include(relationTemplate, {
    attr: 'targets',
    extHint: 'Metadata entities to which the permission applies',
    data: {
        columns: [{
            name: 'type',
            translateData: ''
        },{
            name: 'key',
        }],
        link: null,
        unlink: null
    }
}) %>

<%- include(relationTemplate, {
    attr: 'roles',
    data: {
        columns: [{
            name: 'name'
        },{
            name: 'label'
        },{
            name: 'description'
        }],
        order: {name: 1},
        link: ['item/select', {list: _url('item/list-role')}],
        delete: null
    }
}) %>

<%- include(relationTemplate, {
    attr: 'rule',
    data: {
        columns: [{
            name: 'name'
        },{
            name: 'label'
        },{
            name: 'description'
        }],
        delete: null
    }
}) %>

<%- include(_view.get('_part/attr/text'), {
    attr: 'description'
}) %>