<%
const canSend = model.canSend();
%>
<% layout(_view.get(_layout)) %>

<%- include(_view.get('_part/attr/string'), {
    attr: 'subject'
}) %>

<%- include(_view.get('_part/attr/text'), {
    attr: 'text'
}) %>

<%- include(_view.get('_part/attr/relation'), {
    attr: 'notification',
    data: {
        columns: [{
            name: 'active',
            format: 'boolean'
        },{
            name: 'name'
        },{
            name: 'subject'
        },{
            name: 'text'
        }],
        delete: null
    }
}) %>

<%- include(_view.get('_part/attr/relation'), {
    attr: 'recipients',
    extHint: 'If direct recipients empty on message sending then user filters from the notification will be used',
    data: {
        columns: [{
            name: 'name',
            sortable: true,
            translate: 'user'
        }, {
            name: 'email',
            sortable: true
        }],
        link: canSend,
        unlink: canSend,
        create: null,
        delete: null
    }
}) %>