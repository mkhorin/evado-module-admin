<% block('title', 'Notice message') %>

<% if (model.canSend()) { %>
<% block('commands', {template: _view.get('notice-message/_toolSend')}); %>
<% } %>

<%- include(_view.getInternalTemplate('_form')) %>

<%- include(_view.get('_part/attr/static'), {
    attr: 'createdAt',
    format: 'timestamp'
}) %>

<%- include(_view.get('_part/attr/static'), {
    attr: 'sentAt',
    format: 'timestamp'
}) %>

<% if (model.isSent()) { %>
<%- include(_view.get('_part/attr/relation'), {
    attr: 'popupNotifications',
    data: {
        columns: [{
            name: 'read',
            format: 'boolean'
        },{
            name: 'user',
            format: {
                name: 'relation',
                url: _url('user/update')
            }
        }],
        link: null,
        unlink: null
    }
}) %>
<% } %>