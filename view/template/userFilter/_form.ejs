<%
layout(_view.get(_layout));
block('tab', 'User filter');

const stringTemplate = _view.get('_part/attr/string');
%>

<%- include(stringTemplate, {
    attr: 'name'
}) %>

<%- include(stringTemplate, {
    attr: 'label'
}) %>

<%- include(_view.get('_part/attr/text'), {
    attr: 'description'
}) %>

<%- include(_view.get('_part/attr/json'), {
    attr: 'config'
}) %>

<%- include(_view.get('_part/group/tabs'), {
    items: [{
        id: 'assignments',
        label: 'Assignments',
        active: true,
        content: _view.getInternalTemplate('group/assignments'),
        loadable: true
    }, {
        id: 'includes',
        label: 'Included users',
        content: _view.getInternalTemplate('group/includes'),
        loadable: true
    }, {
        id: 'excludes',
        label: 'Excluded users',
        content: _view.getInternalTemplate('group/excludes'),
        loadable: true
    }]
}) %>