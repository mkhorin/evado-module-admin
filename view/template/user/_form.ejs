<%
layout(_view.get(_layout));
block('tab', 'User');
block('behaviors', {
  Class: 'DependentValueBehavior',
  source: 'blocked',
  sourceValue: 'on',
  target: 'unlockAt',
  targetValue: ''
});
const checkboxTemplate = _view.get('_part/attr/checkbox');
const columnTemplate = _view.get('_part/group/columns');
const datetimeTemplate = _view.get('_part/attr/datetime');
const inlineTemplate = _view.get('_part/group/inline');
const stringTemplate = _view.get('_part/attr/string');
%>

<%- include(columnTemplate, {
  items: [{
    template: stringTemplate,
    params: {
      attr: 'name',
      translate: 'user'
    }
  },{
    template: stringTemplate,
    params: {
      attr: 'email'
    }
  }]
}) %>

<%- include(inlineTemplate, {
  items: [{
    template: checkboxTemplate,
    params: {
      attr: 'blocked'
    }
  },{
    template: checkboxTemplate,
    params: {
      attr: 'verified'
    }
  },{
    template: checkboxTemplate,
    params: {
      attr: 'expiredPassword'
    }
  }]
}) %>

<%- include(columnTemplate, {
  items: [{
    template: datetimeTemplate,
    params: {
      attr: 'unlockAt',
      utc: false
    }
  }]
}) %>